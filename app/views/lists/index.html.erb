<%# Banner %>
<%= render "banner", lists: @lists %>

<div class="container movie-grid">
    <% @lists.each do |list| %>
        <div class="card" style="width: 18rem;">
            <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
            <%= image_tag("https://images.unsplash.com/photo-1530925486883-d9da662d497c?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=936&q=80") %>
            <%= link_to 'delete', list_path(list), method: :delete, class:"second-btn margin-top-10", data: { confirm: "Are you sure you want to remove" } %>
        </div>
    <% end %>
</div>
