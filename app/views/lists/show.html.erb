<div class="container">
    <h1><%= @list.name %></h1>
    <%= simple_form_for [ @list, @bookmark ] do |f| %>
        <%= f.input :comment, required: true %>
        <%= f.association :movie %>
        <%= f.submit %>
    <% end %>

    <div class="card" style="width: 18rem;">
        <% @bookmarks.each do |bookmark| %>
            <%= image_tag(bookmark.movie.poster_url, :alt => "rss feed") %>
            <div class="card-body">
                <h5 class="card-title"><%= bookmark.movie.title %></h5>
                <p class="card-text"><%= bookmark.comment %></p>
                <%= link_to 'delete', bookmark_path(bookmark), method: :delete, class:"btn btn-primary", data: { confirm: "Are you sure you want to remove" } %>
            <% end %>
        </div>
    </div>
</div>



